---
import HeaderLogo from "../assets/d20-light.svg" 
---

<header>
  <a href="/">
    <HeaderLogo 
      width={32}
      height={32}
      aria-label="On Deck logo"
      class="logo-img"
    />
  </a>
  <nav>
    <a href="/">Home</a>
    <a href="/how-to">How to use</a>
    <a href="/about">About</a>
  </nav>
</header>

<style lang="scss">
  header {
    background-color: var(--blue-darker);
    padding: var(--margin-md);
    min-height: 4.5em;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-img {
    fill: #C5AC46;
  }
  .logo-img:hover {
    fill: #FFF9DA;
  }

  /*
  .title {
    color: var(--gold);
    font-size: 3em;
    font-weight: 600;
    margin: 0.5em 0; 
  }
  */

  nav {
    outline: 1px solid var(--blue-dark);
    display: flex;

    a {
      color: var(--gold);
      padding: var(--margin-sm);
    }

    a:hover {
      background-color: var(--blue);
      color: var(--gold-lighter);
    }
  }
</style>